rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(data) {
      return isSignedIn() && data.ownerUid == request.auth.uid;
    }

    match /clients/{clientId} {
      // Only the owner can read
      allow read: if isOwner(resource.data);

      // Create: must be signed-in owner and fields must be valid
      allow create: if isSignedIn()
        && ('ownerUid' in request.resource.data)
        && request.resource.data.ownerUid == request.auth.uid
        && ('name' in request.resource.data && request.resource.data.name is string)
        && ('phone' in request.resource.data && request.resource.data.phone is string)
        && ('address' in request.resource.data && request.resource.data.address is string)
        && ('bankName' in request.resource.data && request.resource.data.bankName is string)
        && ('accountNumber' in request.resource.data && request.resource.data.accountNumber is string)
        && (!('taxId' in request.resource.data)
            || request.resource.data.taxId is string
            || request.resource.data.taxId == null);

      // Update: owner only, ownerUid cannot change, fields remain valid
      allow update: if isOwner(resource.data)
        && ('ownerUid' in request.resource.data)
        && request.resource.data.ownerUid == resource.data.ownerUid
        && ('name' in request.resource.data ? request.resource.data.name is string : true)
        && ('phone' in request.resource.data ? request.resource.data.phone is string : true)
        && ('address' in request.resource.data ? request.resource.data.address is string : true)
        && ('bankName' in request.resource.data ? request.resource.data.bankName is string : true)
        && ('accountNumber' in request.resource.data ? request.resource.data.accountNumber is string : true)
        && ('taxId' in request.resource.data
            ? (request.resource.data.taxId is string || request.resource.data.taxId == null)
            : true);

      // Delete: owner only
      allow delete: if isOwner(resource.data);
    }
  }
}